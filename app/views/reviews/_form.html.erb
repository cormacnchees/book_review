<!-- finding reviews and building reviews from that book -->
<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
  <!-- star selector -->
  <div id='rating-form'>
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit, :class => 'btn-custom2' %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
