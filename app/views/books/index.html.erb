<h1 class='current-category'><%= params[:category] %></h1>

<!-- No Books in Category -->
<% if @books.count == 0 %>
  <h1>There are no books currently in this category</h1>
<% else %>

  <div class="row">


    <!-- Loop over each book, displays title -->
    <% @books.each do |book| %>
      <div class="col-md-3">
        <!--creates clickable link on each book's title -->
        <a href='/books/<%= book.id %>'>
          <%= image_tag book.book_img.url(:book_index), class: "book" %>
        </a>

      </div>

    <% end %>

  </div>

<% end %>
