<h2><%= @book.title %></h2>
<h3><%= @book.author %></h3>
<h4><%= @book.category.name %></h4>
<p>
  <%= @book.description %>
</p>


<!-- Back, Edit and Delete btns -->
<%= link_to 'Back', root_path %>


<% if user_signed_in? %>

<!-- Only users who created the book can Edit or Delete it -->
<% if @book.user_id == current_user.id %>

<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>
<% end %>
